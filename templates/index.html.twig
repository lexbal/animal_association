{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12 col-lg-12 col-sm-12">
            <h3>Animals</h3>
        </div>
    </div>

    <div class="row">
        {% for animal in animals %}
            <div class="col-md-3 col-lg-3 col-sm-6">
                <div class="card">
                    <div class="card-header">
                        {{ animal.name }}
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item">
                                Height : {{ animal.height }}
                            </li>
                            <li class="list-group-item">
                                Weight : {{ animal.weight }}
                            </li>
                            <li class="list-group-item">
                                Breed : {{ animal.breed }}
                            </li>
                            <li class="list-group-item">
                                Type : {{ animal.type }}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="row">
        <div class="col-md-12 col-lg-12 col-sm-12">
            <h3>Accessories</h3>
        </div>
    </div>

    <div class="row">
        {% for accessory in animalAccessories %}
            <div class="col-md-3 col-lg-3 col-sm-6">
                <div class="card">
                    <div class="card-header">
                        {{ accessory.name }}
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item">
                                Quantity : {{ accessory.quantity }}
                            </li>
                            <li class="list-group-item">
                                Price : {{ accessory.price }} â‚¬
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {% if is_granted("IS_AUTHENTICATED_FULLY") %}
        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12">
                <h3>Donation</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12">
                {{ form_start(form) }}
                    {{ form_row(form.amount) }}
                    <button type="submit" class="btn btn-success">Submit</button>
                {{ form_end(form) }}
            </div>
        </div>
    {% endif %}
{% endblock %}