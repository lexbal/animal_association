{% extends 'base.html.twig' %}

{% block body %}
    {% set sum = 0 %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h3>Items in cart :</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <ul class="list-group">
                <li class="list-group-item">
                    <h5>Animals :</h5>
                </li>
                {% for animal in animals %}
                    {% set sum = sum + animal.price %}
                    <li class="list-group-item">
                        <a href="{{ path('remove_item', {'id': animal.id|nzo_encrypt, 'type': 'animal'}) }}" class="btn btn-danger">Remove</a>
                        {{ animal.name }}
                        <span style="float: right">{{ animal.price }} €</span>
                    </li>
                {% endfor %}
                <li class="list-group-item">
                    <h5>Accessories :</h5>
                </li>
                {% for accessory in accessories %}
                    {% set sum = sum + accessory.price %}
                    <li class="list-group-item">
                        <a href="{{ path('remove_item', {'id': accessory.id|nzo_encrypt, 'type': 'accessory'}) }}" class="btn btn-danger">Remove</a>
                        {{ accessory.name }}
                        <span style="float: right">{{ accessory.price }} €</span>
                    </li>
                {% endfor %}
                <li class="list-group-item list-group-item-primary">
                    Total :
                    <span style="float: right">{{ sum }} €</span>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}