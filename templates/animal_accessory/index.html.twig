{% extends 'base.html.twig' %}

{% block title %}Animal Accessory{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h3>Accessories :</h3>
        </div>
    </div>

    <div class="row">
        {% for accessory in accessories %}
            <div class="col-md-3 col-lg-3 col-sm-6">
                <div class="card">
                    <div class="card-header">
                        {{ accessory.name }}
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item">
                                Quantity : {{ accessory.quantity }}
                            </li>
                            <li class="list-group-item">
                                Price : {{ accessory.price }} â‚¬
                            </li>
                        </ul>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('animal_accessory_detail', {'id' : accessory.id|nzo_encrypt}) }}" class="btn btn-primary">
                            More info
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
